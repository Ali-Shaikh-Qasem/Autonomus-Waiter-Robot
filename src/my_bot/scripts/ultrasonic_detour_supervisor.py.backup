#!/usr/bin/env python3
"""
Ultrasonic Detour Supervisor - Goal-Preserving Reactive Navigation Wrapper

Monitors ultrasonic sensors and temporarily takes over navigation when low obstacles
are detected, executing a detour maneuver while preserving the original goal.

State Machine:
  IDLE → NAVIGATING → AVOID_CANCEL → AVOID_SCAN → AVOID_STEP → RESUME_GOAL → NAVIGATING

Author: ROS2 Navigation Assistant
"""

import rclpy
from rclpy.node import Node
from rclpy.action import ActionClient
from rclpy.duration import Duration
from geometry_msgs.msg import PoseStamped, Twist
from sensor_msgs.msg import Range
from nav2_msgs.action import NavigateToPose
from tf2_ros import Buffer, TransformListener
from tf2_ros import LookupException, ConnectivityException, ExtrapolationException
import math
import time
from enum import Enum
from collections import deque


class State(Enum):
    IDLE = 0
    NAVIGATING = 1
    AVOID_CANCEL = 2
    AVOID_SCAN = 3
    AVOID_STEP = 4
    RESUME_GOAL = 5


class UltrasonicDetourSupervisor(Node):
    def __init__(self):
        super().__init__('ultrasonic_detour_supervisor')
        
        # === Parameters ===
        self.declare_parameter('stop_distance', 0.5)        # Stop distance before obstacle
        self.declare_parameter('turn_angle_deg', 90.0)      # How much to turn (degrees)
        self.declare_parameter('step_distance', 2.0)        # How far to move forward after turn
        self.declare_parameter('turn_speed', 0.5)           # Rotation speed (rad/s)
        self.declare_parameter('persistence_ms', 150)       # Obstacle persistence
        self.declare_parameter('cool_down_sec', 2.0)        # Cooldown between triggers
        self.declare_parameter('filter_window', 5)          # Smoothing window size
        self.declare_parameter('intermediate_timeout', 10.0) # Timeout for intermediate goal
        
        self.stop_dist = self.get_parameter('stop_distance').value
        self.turn_angle_deg = self.get_parameter('turn_angle_deg').value
        self.step_dist = self.get_parameter('step_distance').value
        self.turn_speed = self.get_parameter('turn_speed').value
        self.persistence_ms = self.get_parameter('persistence_ms').value
        self.cool_down_sec = self.get_parameter('cool_down_sec').value
        self.filter_window = self.get_parameter('filter_window').value
        self.intermediate_timeout = self.get_parameter('intermediate_timeout').value
        
        # === State ===
        self.state = State.IDLE
        self.original_goal = None
        self.nav_goal_handle = None
        self.is_intermediate_goal = False  # Track if current goal is intermediate
        
        # Sensor data with smoothing buffers
        self.sensor_buffers = {
            'front_up': deque(maxlen=self.filter_window),
            'front_down': deque(maxlen=self.filter_window),
            'left_up': deque(maxlen=self.filter_window),
            'left_down': deque(maxlen=self.filter_window),
            'right_up': deque(maxlen=self.filter_window),
            'right_down': deque(maxlen=self.filter_window),
        }
        
        # Timing
        self.obstacle_detect_time = None
        self.last_avoid_time = 0
        
        # Turn state
        self.turn_direction = 1  # 1=left, -1=right
        self.turn_target_angle = 0.0
        self.turn_start_time = None
        
        # Step state
        self.step_start_time = None
        
        # === TF2 ===
        self.tf_buffer = Buffer()
        self.tf_listener = TransformListener(self.tf_buffer, self)
        
        # === Action Client ===
        self.nav_client = ActionClient(self, NavigateToPose, '/navigate_to_pose')
        
        # === Subscribers ===
        self.goal_sub = self.create_subscription(
            PoseStamped, '/goal_pose', self.goal_callback, 10)
        
        for sensor in self.sensor_buffers.keys():
            topic = f'/us/{sensor}'
            self.create_subscription(
                Range, topic,
                lambda msg, s=sensor: self.range_callback(msg, s),
                10)
        
        # Subscribe to Nav2's output (for muxing)
        self.nav_cmd_sub = self.create_subscription(
            Twist, '/cmd_vel_nav', self.nav_cmd_callback, 10)
        
        self.nav_cmd = Twist()
        
        # === Publishers ===
        self.cmd_pub = self.create_publisher(Twist, '/cmd_vel', 10)
        
        # === Timer ===
        self.timer = self.create_timer(0.1, self.control_loop)  # 10 Hz
        
        self.get_logger().info(
            f"Detour Supervisor initialized:\n"
            f"  Slowdown zone: {self.slow_dist}m (factor: {self.min_speed_factor})\n"
            f"  Stop/Avoid: {self.stop_dist}m\n"
            f"  Clear threshold: {self.clear_dist}m\n"
            f"  Persistence: {self.persistence_ms}ms")
    
    def range_callback(self, msg: Range, sensor_name: str):
        """Store and smooth sensor readings"""
        if math.isfinite(msg.range) and msg.range > 0.01:
            self.sensor_buffers[sensor_name].append(msg.range)
        else:
            self.sensor_buffers[sensor_name].append(4.0)
    
    def get_smoothed_range(self, sensor_name: str) -> float:
        """Get median-filtered range"""
        buf = self.sensor_buffers[sensor_name]
        if len(buf) == 0:
            return 4.0
        return sorted(buf)[len(buf)//2]  # Median filter
    
    def get_aggregate_ranges(self) -> tuple:
        """Get front, left, right minimum ranges"""
        front = min(
            self.get_smoothed_range('front_up'),
            self.get_smoothed_range('front_down')
        )
        left = min(
            self.get_smoothed_range('left_up'),
            self.get_smoothed_range('left_down')
        )
        right = min(
            self.get_smoothed_range('right_up'),
            self.get_smoothed_range('right_down')
        )
        return front, left, right
    
    def nav_cmd_callback(self, msg: Twist):
        """Store Nav2's command for passthrough"""
        self.nav_cmd = msg
    
    def goal_callback(self, msg: PoseStamped):
        """Receive new goal from user"""
        self.get_logger().info(f"Received goal: ({msg.pose.position.x:.2f}, {msg.pose.position.y:.2f})")
        self.original_goal = msg
        self.is_intermediate_goal = False
        self.send_nav_goal(msg)
    
    def send_nav_goal(self, goal: PoseStamped):
        """Send goal to Nav2 navigate_to_pose action"""
        if not self.nav_client.wait_for_server(timeout_sec=2.0):
            self.get_logger().error("Nav2 action server not available!")
            return
        
        goal_msg = NavigateToPose.Goal()
        goal_msg.pose = goal
        
        self.get_logger().info(f"Sending goal to Nav2: ({goal.pose.position.x:.2f}, {goal.pose.position.y:.2f})")
        send_future = self.nav_client.send_goal_async(goal_msg)
        send_future.add_done_callback(self.goal_response_callback)
    
    def goal_response_callback(self, future):
        """Handle Nav2 goal acceptance"""
        self.nav_goal_handle = future.result()
        if not self.nav_goal_handle.accepted:
            self.get_logger().warn("Goal rejected by Nav2")
            self.state = State.IDLE
            return
        
        self.state = State.NAVIGATING
        self.get_logger().info("Goal accepted by Nav2, state → NAVIGATING")
        
        # Get result async
        result_future = self.nav_goal_handle.get_result_async()
        result_future.add_done_callback(self.goal_result_callback)
    
    def goal_result_callback(self, future):
        """Handle Nav2 goal completion"""
        result = future.result().result
        status = future.result().status
        
        if status == 4:  # SUCCEEDED
            if self.is_intermediate_goal:
                # Intermediate goal completed - resume original
                self.get_logger().info("✓ Intermediate goal reached - Resuming original goal")
                self.is_intermediate_goal = False
                self.state = State.RESUME_GOAL
                self.step_start_time = None
            else:
                # Original goal completed
                self.get_logger().info("✓ FINAL GOAL REACHED - Navigation complete!")
                self.state = State.IDLE
                self.original_goal = None
        elif status == 5:  # CANCELED
            self.get_logger().info("Nav2 goal canceled (expected during avoidance)")
            self.is_intermediate_goal = False
        else:
            self.get_logger().warn(f"Nav2 goal failed with status {status}")
            if self.is_intermediate_goal:
                # Intermediate goal failed - resume anyway
                self.get_logger().warn("Intermediate goal failed - Resuming original goal anyway")
                self.is_intermediate_goal = False
                self.state = State.RESUME_GOAL
                self.step_start_time = None
    
    def get_current_pose(self) -> PoseStamped:
        """Get robot's current pose in map frame"""
        try:
            transform = self.tf_buffer.lookup_transform(
                'map', 'base_link', rclpy.time.Time(), timeout=Duration(seconds=0.5))
            
            pose = PoseStamped()
            pose.header.frame_id = 'map'
            pose.header.stamp = self.get_clock().now().to_msg()
            pose.pose.position.x = transform.transform.translation.x
            pose.pose.position.y = transform.transform.translation.y
            pose.pose.position.z = 0.0
            pose.pose.orientation = transform.transform.rotation
            
            return pose
        except (LookupException, ConnectivityException, ExtrapolationException) as e:
            self.get_logger().error(f"TF lookup failed: {e}")
            return None
    
    def quaternion_to_yaw(self, q) -> float:
        """Convert quaternion to yaw angle"""
        siny_cosp = 2 * (q.w * q.z + q.x * q.y)
        cosy_cosp = 1 - 2 * (q.y * q.y + q.z * q.z)
        return math.atan2(siny_cosp, cosy_cosp)
    
    def yaw_to_quaternion(self, yaw: float):
        """Convert yaw to quaternion"""
        from geometry_msgs.msg import Quaternion
        q = Quaternion()
        q.x = 0.0
        q.y = 0.0
        q.z = math.sin(yaw / 2.0)
        q.w = math.cos(yaw / 2.0)
        return q
    
    def control_loop(self):
        """Main state machine loop"""
        front, left, right = self.get_aggregate_ranges()
        current_time = time.time()
        
        # === State: IDLE ===
        if self.state == State.IDLE:
            # Just forward Nav2 commands
            self.cmd_pub.publish(self.nav_cmd)
            return
        
        # === State: NAVIGATING ===
        if self.state == State.NAVIGATING:
            # Get minimum obstacle distance from any direction
            min_obstacle_dist = min(front, left, right)
            
            # Progressive slowdown zone
            if min_obstacle_dist < self.slow_dist:
                # Calculate slowdown factor (1.0 at slow_dist, min_speed_factor at stop_dist)
                if min_obstacle_dist > self.stop_dist:
                    speed_factor = self.min_speed_factor + (1.0 - self.min_speed_factor) * \
                                  (min_obstacle_dist - self.stop_dist) / (self.slow_dist - self.stop_dist)
                else:
                    speed_factor = self.min_speed_factor
                
                # Apply slowdown to Nav2's command
                slowed_cmd = Twist()
                slowed_cmd.linear.x = self.nav_cmd.linear.x * speed_factor
                slowed_cmd.linear.y = self.nav_cmd.linear.y * speed_factor
                slowed_cmd.angular.z = self.nav_cmd.angular.z
                self.cmd_pub.publish(slowed_cmd)
                
                self.get_logger().info(
                    f"SLOWDOWN: min_dist={min_obstacle_dist:.2f}m, "
                    f"speed_factor={speed_factor:.2f} "
                    f"(front={front:.2f}, left={left:.2f}, right={right:.2f})",
                    throttle_duration_sec=1.0)
            else:
                # Forward Nav2 commands unmodified
                self.cmd_pub.publish(self.nav_cmd)
            
            # Check for obstacle trigger (use front sensor primarily)
            if front < self.stop_dist:
                if self.obstacle_detect_time is None:
                    self.obstacle_detect_time = current_time
                elif (current_time - self.obstacle_detect_time) * 1000 > self.persistence_ms:
                    # Cooldown check
                    if current_time - self.last_avoid_time > self.cool_down_sec:
                        self.get_logger().warn(f"OBSTACLE DETECTED: front={front:.2f}m - Starting avoidance")
                        self.state = State.AVOID_CANCEL
                        self.last_avoid_time = current_time
                        self.obstacle_detect_time = None
            else:
                self.obstacle_detect_time = None
            return
        
        # === State: AVOID_CANCEL ===
        if self.state == State.AVOID_CANCEL:
            self.get_logger().info("State: AVOID_CANCEL - Stopping and preparing to turn")
            
            # Stop robot
            stop_cmd = Twist()
            self.cmd_pub.publish(stop_cmd)
            
            # Cancel current goal
            if self.nav_goal_handle is not None:
                self.nav_goal_handle.cancel_goal_async()
                self.nav_goal_handle = None
            
            # Decide turn direction (left if left has more space, else right)
            front, left, right = self.get_aggregate_ranges()
            self.turn_direction = 1 if left > right else -1
            self.turn_target_angle = self.turn_angle_deg * (math.pi / 180.0)  # Convert to radians
            self.turn_start_time = current_time
            
            self.get_logger().info(f"Turning {'LEFT' if self.turn_direction > 0 else 'RIGHT'} by {self.turn_angle_deg}°")
            self.state = State.AVOID_SCAN
            return
        
        # === State: AVOID_SCAN (now just a simple turn) ===
        if self.state == State.AVOID_SCAN:
            # Calculate how long we've been turning
            time_elapsed = current_time - self.turn_start_time
            angle_rotated = self.turn_speed * time_elapsed
            
            if angle_rotated >= self.turn_target_angle:
                # Turn complete
                self.get_logger().info("Turn complete - Moving to AVOID_STEP")
                stop_cmd = Twist()
                self.cmd_pub.publish(stop_cmd)
                self.state = State.AVOID_STEP
                self.step_start_time = None
                return
            
            # Continue turning
            cmd = Twist()
            cmd.angular.z = self.turn_direction * self.turn_speed
            self.cmd_pub.publish(cmd)
            
            remaining_deg = (self.turn_target_angle - angle_rotated) * 180 / math.pi
            self.get_logger().info(f"Turning... {remaining_deg:.0f}° remaining", throttle_duration_sec=0.5)
            return
        
        # === State: AVOID_STEP ===
        if self.state == State.AVOID_STEP:
            if self.step_start_time is None:
                self.get_logger().info(f"State: AVOID_STEP - Moving {self.step_dist}m forward")
                
                current_pose = self.get_current_pose()
                if current_pose is None:
                    self.get_logger().error("Cannot get current pose - Resuming goal")
                    self.state = State.RESUME_GOAL
                    return
                
                # Compute intermediate goal straight ahead
                yaw = self.quaternion_to_yaw(current_pose.pose.orientation)
                intermediate_goal = PoseStamped()
                intermediate_goal.header.frame_id = 'map'
                intermediate_goal.header.stamp = self.get_clock().now().to_msg()
                intermediate_goal.pose.position.x = current_pose.pose.position.x + self.step_dist * math.cos(yaw)
                intermediate_goal.pose.position.y = current_pose.pose.position.y + self.step_dist * math.sin(yaw)
                intermediate_goal.pose.orientation = self.yaw_to_quaternion(yaw)
                
                self.get_logger().info(
                    f"Intermediate goal: ({intermediate_goal.pose.position.x:.2f}, "
                    f"{intermediate_goal.pose.position.y:.2f})")
                
                self.is_intermediate_goal = True
                self.send_nav_goal(intermediate_goal)
                self.step_start_time = current_time
            
            # Check timeout
            if current_time - self.step_start_time > self.intermediate_timeout:
                self.get_logger().warn("Intermediate goal timeout - Resuming original goal")
                self.state = State.RESUME_GOAL
                self.step_start_time = None
            
            # Forward Nav2 commands
            self.cmd_pub.publish(self.nav_cmd)
            return
        
        # === State: RESUME_GOAL ===
        if self.state == State.RESUME_GOAL:
            self.get_logger().info("State: RESUME_GOAL - Resending original goal")
            
            if self.original_goal is not None:
                self.is_intermediate_goal = False
                self.send_nav_goal(self.original_goal)
                # State will transition to NAVIGATING in goal_response_callback
            else:
                self.get_logger().warn("No original goal to resume")
                self.state = State.IDLE
            return


def main(args=None):
    rclpy.init(args=args)
    node = UltrasonicDetourSupervisor()
    
    try:
        rclpy.spin(node)
    except KeyboardInterrupt:
        pass
    finally:
        node.destroy_node()
        rclpy.shutdown()


if __name__ == '__main__':
    main()
